.hero-unit  
  %h1#logo #{@fakeapp.name}
  %h2  
    = Thesaurus.getSentences(1)
  %p
    = Thesaurus.getSentences(3)
    %a{:class=>"btn btn-primary btn-large"} Check out the Data!
%div{:data=>{:role=>"content"}}
  .span4
    %a{:data=>{:role=>"button", :icon=>"star", :theme=>"#{@fakeapp.jquerytheme}"}, :href=> "/a/map?seed=#{@seed}"} #{Thesaurus::VIEW.sample.capitalize} Map
  .span4  
    %a{:data=>{:role=>"button", :theme=>"#{@fakeapp.jquerytheme}"}, :href=>"/a/contact?seed=#{@seed}"} #{Thesaurus::CONTACT.sample.capitalize}
  .span4
    %a{:data=>{:role=>"button", :theme=>"#{@fakeapp.jquerytheme}"}, :href=>"/a/info?seed=#{@seed}"} #{Thesaurus::ABOUT.sample.capitalize}
